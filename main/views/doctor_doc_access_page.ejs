<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Testing Request Access Functionality</title>
    <style>
        body {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
        }
        h1 {
            margin-bottom: 20px;
        }
        button {
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            border: none;
            background-color: #007bff;
            color: white;
            border-radius: 5px;
        }
        button:hover {
            background-color: #0056b3;
        }
        .otp-box {
            display: none;
            flex-direction: column;
            align-items: center;
            margin-top: 20px;
            padding: 20px;
            background-color: white;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
        .otp-inputs {
            display: flex;
            gap: 5px;
        }
        .otp-inputs input {
            width: 40px;
            height: 40px;
            text-align: center;
            font-size: 18px;
        }
    </style>
    <script>
        function showOtpBox() {
            document.getElementById('otp-box').style.display = 'flex';
        }
        
        document.addEventListener("DOMContentLoaded", function() {
            const inputs = document.querySelectorAll(".otp-inputs input");
            
            inputs.forEach((input, index) => {
                input.addEventListener("input", function() {
                    if (this.value.length === 1 && index < inputs.length - 1) {
                        inputs[index + 1].focus();
                    }
                });

                input.addEventListener("keydown", function(event) {
                    if (event.key === "Backspace" && index > 0 && this.value === "") {
                        inputs[index - 1].focus();
                    }
                });
            });
        });
    </script>
</head>
<body>
    <h1>Testing Request Access Functionality</h1>
    <!-- <button onclick="showOtpBox()">Request Access</button>
    <form action="" method="post">
        <input type="submit" name="upvote" value="Upvote" />
    </form> -->
    <form action="/sendCustomTemplateMessage" method="POST">
        <div>
            <label for="phoneNumber">Phone Number:</label>
            <input type="tel" id="phoneNumber" name="phoneNumber" placeholder="Enter phone number" required>
        </div>
        <div>
            <label for="customerName">Name:</label>
            <input type="text" id="customerName" name="customerName" placeholder="Enter name" required>
        </div>
        <button type="submit">Send WhatsApp Message</button>
    </form>
    <form action="/generate-otp" method="post" id="myForm">
        <div>
            <label for="phoneNumber">Phone Number:</label>
            <input type="tel" id="phoneNumber" name="phoneNumber" placeholder="Enter phone number" required>
        </div>
        <button onclick="showOtpBox()" type="submit" class="btn btn-sm btn-info" name="genOTP">Request Access</button>
    </form>

    <div id="otp-box" class="otp-box">
        <form action="/verify-otp" method="POST">
            <label>Enter OTP:</label>
            <div class="otp-inputs">
                <input type="text" name="otp1" maxlength="1" required>
                <input type="text" name="otp2" maxlength="1" required>
                <input type="text" name="otp3" maxlength="1" required>
                <input type="text" name="otp4" maxlength="1" required>
                <input type="text" name="otp5" maxlength="1" required>
                <input type="text" name="otp6" maxlength="1" required>
            </div>
            <button type="submit">Verify</button>
        </form>
    </div>
</body>
</html>
